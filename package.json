{
  "name": "gasolin-blog",
  "version": "2.2.0",
  "private": true,
  "hexo": {
    "version": "3.8.0"
  },
  "dependencies": {
    "file-patch": "0.3.0",
    "hexo": "3.8.0",
    "hexo-deployer-git": "1.0.0",
    "hexo-footnotes": "1.0.2",
    "hexo-generator-archive": "0.1.5",
    "hexo-generator-category": "0.1.3",
    "hexo-generator-cname": "0.3.0",
    "hexo-generator-feed": "1.2.2",
    "hexo-generator-index": "0.2.1",
    "hexo-generator-search": "2.4.0",
    "hexo-generator-seo-friendly-sitemap": "0.0.25",
    "hexo-generator-tag": "0.2.0",
    "hexo-new-post-pinyin": "0.0.3",
    "hexo-related-popular-posts": "3.0.6",
    "hexo-renderer-ejs": "0.3.1",
    "hexo-renderer-markdown-it": "3.4.1",
    "hexo-renderer-stylus": "0.3.3",
    "hexo-server": "1.0.0",
    "hexo-tag-mermaid": "1.0.0",
    "hexo-wordcount": "6.0.1",
    "markdown-it-emoji": "1.4.0"
  },
  "scripts": {
    "patchConfig": "./node_modules/.bin/file-patch themes/_config.yml.diff themes/next/_config.yml",
    "patchStyle": "./node_modules/.bin/file-patch themes/base.styl.diff themes/next/source/css/_variables/base.styl",
    "patchHead": "./node_modules/.bin/file-patch themes/head.swig.diff themes/next/layout/_partials/head/head.swig",
    "patchPost": "./node_modules/.bin/file-patch themes/post.swig.diff themes/next/layout/_macro/post.swig",
    "postinstall": "npm run patchConfig && npm run patchStyle && npm run patchHead && npm run patchPost"
  },
  "devDependencies": {
    "cz-gitmoji-changelog": "1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-gitmoji-changelog"
    }
  }
}
